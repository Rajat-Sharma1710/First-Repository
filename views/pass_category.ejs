    </div> 
  </div>
</nav>

<div class="container">
  <div class="row">
<h1>Password Category</h1>
<br>
    <table class="table">
        <thead>
          <tr>
            <th>Password_Category</th>   
            <th>Action</th>   
           
              </tr>
            </thead>
          <tbody> 
            <% if(data.length>0) {
              data.forEach(function(row){
              %> 
      <tr>
        <td><%=row.password%></td>
        
        <!-- for the html form icon  -->
        <td><a class="btn btn-primary btn-xs"href="/pass_category/edit/<%=row._id%>"><i class="fa fa-edit"></i></a>
         <a class="btn btn-danger btn-xs"href="/pass_category/delete/<%=row._id%>"><i class="fa fa-trash"></i></a></td>
      </tr>
      <%  }) } %>
      </tbody>
              </table>
              </div>
              </div>
            </body>

      </html>


